	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"svelte": "^3.59.2"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/kit": "^1.27.0",
		"@sveltejs/package": "^2.2.2",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"eslint": "^8.52.0",
		"eslint-plugin-svelte": "^2.34.0",
		"publint": "^0.1.16",
		"svelte": "^3.59.2",
		"svelte-check": "^3.5.2",
		"tslib": "^2.6.2",
		"typescript": "^4.9.5",
		"vite": "^4.5.0"
	},
	"svelte": "./dist/index.js",
