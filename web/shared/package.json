	"dependencies": {
		"btc2fiat": "^0.1.23",
		"dompurify": "^3.0.8",
		"light-bolt11-decoder": "^3.0.0",
		"nostr-tools": "^1.13.1",
		"uuid": "^9.0.1"
	}
}
